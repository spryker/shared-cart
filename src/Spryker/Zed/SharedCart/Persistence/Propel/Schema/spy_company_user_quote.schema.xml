<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd" name="zed"
          namespace="Orm\Zed\SharedCart\Persistence"
          package="src.Orm.Zed.SharedCart.Persistence"
>

    <table name="spy_quote_company_user" idMethod="native" allowPkInsert="true">
        <column name="id_quote_company_user" required="true" type="INTEGER" primaryKey="true" autoIncrement="true"/>
        <column name="fk_company_user" required="true" type="INTEGER"/>
        <column name="fk_quote" required="true" type="INTEGER"/>
        <column name="fk_quote_role" required="true" type="INTEGER"/>
        <column name="is_active" required="true" defaultValue="true" type="BOOLEAN"/>

        <id-method-parameter value="id_quote_company_user_pk_seq"/>

        <foreign-key name="spy_quote_company_user-fk_company_user" foreignTable="spy_company_user">
            <reference local="fk_company_user" foreign="id_company_user"/>
        </foreign-key>
        <foreign-key name="spy_quote_company_user-fk_quote" foreignTable="spy_quote">
            <reference local="fk_quote" foreign="id_quote"/>
        </foreign-key>
        <foreign-key name="spy_quote_company_user-fk_quote_role" foreignTable="spy_quote_role">
            <reference local="fk_quote_role" foreign="id_quote_role"/>
        </foreign-key>

        <index name="spy_quote_company_user-fk_company_user">
            <index-column name="fk_company_user"/>
        </index>
        <index name="spy_quote_company_user-fk_quote">
            <index-column name="fk_quote"/>
        </index>
        <index name="spy_quote_company_user-fk_quote_role">
            <index-column name="fk_quote_role"/>
        </index>

        <unique name="spy_quote_company_user-unique-quote_company_user">
            <unique-column name="fk_company_user"/>
            <unique-column name="fk_quote"/>
        </unique>
        <index name="spy_quote_company_user-quote_company_user">
            <index-column name="fk_company_user"/>
            <index-column name="fk_quote"/>
        </index>
    </table>

    <table name="spy_quote_role" idMethod="native" allowPkInsert="true">
        <column name="id_quote_role" required="true" type="INTEGER" primaryKey="true" autoIncrement="true"/>
        <column name="name" type="VARCHAR" size="255" required="true"/>
        <column name="is_default" type="BOOLEAN" required="true" defaultValue="false"/>

        <id-method-parameter value="spy_quote_role_pk_seq"/>
    </table>

    <table name="spy_quote_role_to_permission" idMethod="native" allowPkInsert="true">
        <column name="id_quote_role_to_permission" type="INTEGER" autoIncrement="true" required="true" primaryKey="true"/>
        <column name="fk_quote_role" type="INTEGER" required="true" />
        <column name="fk_permission" type="INTEGER" required="true" />
        <column name="configuration" type="LONGVARCHAR" required="true"/>

        <foreign-key name="spy_quote_role_to_permission-fk_permission" foreignTable="spy_permission" phpName="Permission" onDelete="CASCADE">
            <reference local="fk_permission" foreign="id_permission"/>
        </foreign-key>
        <foreign-key name="spy_quote_role_to_permission-fk_quote_role" foreignTable="spy_quote_role" phpName="QuoteRole" onDelete="CASCADE">
            <reference local="fk_quote_role" foreign="id_quote_role"/>
        </foreign-key>

        <index name="spy_quote_role_to_permission-fk_quote_role">
            <index-column name="fk_quote_role"/>
        </index>
        <index name="spy_quote_role_to_permission-fk_permission">
            <index-column name="fk_permission"/>
        </index>

        <id-method-parameter value="spy_quote_role_to_permission_pk_seq"/>
    </table>

</database>
